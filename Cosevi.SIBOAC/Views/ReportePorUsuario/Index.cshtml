@model Cosevi.SIBOAC.Models.USUARIO

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte por Usuario - Estatus Plano o Croquis</h2>
<h4>Filtro</h4>
<hr />

<div class="form-group">
    <label class="control-label col-md-2">Rango de fechas</label>
    <div class="col-md-10">
        <div class="input-daterange input-group" id="datepicker">
            <input id="desde" type="text" class="input-sm form-control" name="start" />
            <span class="input-group-addon">to</span>
            <input id="hasta" type="text" class="input-sm form-control" name="end" />
        </div>
    </div>
</div>
<br />
<br />
<br />
<div class="form-group">
    <label class="control-label col-md-2">Usuarios</label>
    <div class="col-md-10">
        <ul id="list" class="list-group" data-toggle="items">
            <!-- -->
        </ul>
    </div>
</div>

<div class="pull-right">
    <button id="generar" type="button" class="btn btn-success">Generar reporte</button>
    <button id="todos" type="button" class="btn btn-primary">Todos</button>
</div>

<br />
<br />
<br />
<h4>Reporte</h4>
<hr />

<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2">
                Usuario
            </div>
            <div class="col-md-1">
                Autoridad
            </div>
            <div class="col-md-1">
                Fecha de accidente
            </div>
            <div class="col-md-1">
                Serie
            </div>
            <div class="col-md-1">
                Parte oficial
            </div>
            <div class="col-md-1">
                Boleta
            </div>
            <div class="col-md-1">
                Fecha de descarga
            </div>
            <div class="col-md-1">
                Clase de placa
            </div>
            <div class="col-md-1">
                Código de placa
            </div>
            <div class="col-md-1">
                Número de placa
            </div>
            <div class="col-md-1">
                Status
            </div>
        </div>
    </div>
    <div id="reporte" class="panel-body">
        <!-- -->
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/reportePorUsuario")
}

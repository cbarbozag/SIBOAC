<br />
<table align="center">
    <tr>
        <td>
            <center>
                <h4>
                    Ministerio de Obras Públicas y Transportes
                </h4>

            </center>
            <center>
                <h4>
                    Dirección General de la Policía de Tránsito
                </h4>
            </center>
            <Center>
                <h4>Reporte por Usuario - Estatus Plano o Croquis</h4>
            </Center>
        </td>
    </tr>
</table>

<table class="table">
    <tr>
        <th>Usuario</th>
        <th>Autoridad</th>
        <th>Fecha de Accidente</th>
        <th>Núm. Artículos</th>
        <th>Serie</th>
        <th>Parte Oficial</th>
        <th>Boletas</th>
        <th>Fecha de descarga</th>
        <th>Clase de Placa</th>
        <th>Códgo de Placa</th>
        <th>Número de Placa</th>
        <th>Status del Plano</th>
    </tr>

    @foreach (var item in ViewBag.Datos)
    {

        <tr>
            <td>
                @item.Usuario
            </td>
            <td>
                @item.Autoridad
            </td>
            <td>
                @item.FechaAccidente
            </td>
            <td>
                @item.Serie
            </td>
            <td>
                @item.NumeroParte
            </td>
            <td>
                @item.Boletas
            </td>
            <td>
                @item.FechaDescarga
            </td>
            <td>
                @item.ClasePlaca
            </td>
            <td>
                @item.CodigoPlaca
            </td>
            <td>
                @item.NumeroPlaca
            </td>
            <td>
                @item.EstadoPlano
            </td>
</tr>
    }
</table>


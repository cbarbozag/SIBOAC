@model PagedList.IPagedList<Cosevi.SIBOAC.Models.LEYENDAPORAUTORIDAD>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Configuración de Leyendas de Autoridad</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().IdAutoridad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DescripcionAutoridad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().PiePagina)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Fecha_Inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Fecha_Fin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Estado == "I")
    {
        <tr class="warning">

        <td>
            @Html.DisplayFor(modelItem => item.IdAutoridad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescripcionAutoridad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PiePagina)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha_Fin)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdAutoridad }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IdAutoridad }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAutoridad })|
            @if (item.Estado == "I")
            {
                @Html.ActionLink("Activar", "Inactivar", new { id = item.IdAutoridad })
            }
            else
            {
                @Html.ActionLink("Inactivar", "Inactivar", new { id = item.IdAutoridad })
            }
        </td>
    </tr>
    }
    else
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.IdAutoridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionAutoridad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PiePagina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Inicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_Fin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.IdAutoridad }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.IdAutoridad }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.IdAutoridad })|
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Inactivar", new { id = item.IdAutoridad })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Inactivar", new { id = item.IdAutoridad })
                }
            </td>
        </tr>
    }
}

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de
@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
@model PagedList.IPagedList<Cosevi.SIBOAC.Models.UnidadesDeAlcohol>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Unidades de Alcohol</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Codigo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeFin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Estado == "I")
    {
    <tr class="warning">

        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeFin)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @Html.ActionLink("Eliminar", "RealDelete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @if (item.Estado == "I")
        {
            @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin })
    }
    else
    {
        @Html.ActionLink("Inactivar", "Delete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin })
}
        </td>
    </tr>
    }
    else
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Codigo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaDeFin)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @Html.ActionLink("Eliminar", "RealDelete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin }) |
            @if (item.Estado == "I")
        {
            @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin })
    }
    else
    {
        @Html.ActionLink("Inactivar", "Delete", new { id = item.Id.Trim(), FechaIni = item.FechaDeInicio, FechaFin = item.FechaDeFin })
}

        </td>
    </tr>
    }
}

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de
@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title -COSEVI</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">        
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="brand">
                <img src="~/Content/cosevi_logo.png" alt="COSEVI" />
            </a>
            @*@Html.ActionLink("SIBOAC", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
        </div>
        <div class="navbar-collapse collapse">
            @Html.Partial("_LoginPartial")
            <ul class="nav navbar-nav navbar-left">
                <li>    
                    <a>
                        @System.Configuration.ConfigurationManager.AppSettings["SystemName"]
                    </a>
                </li>
            </ul> 
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action("ChangePassword", "Account", new { code = User.Identity.Name })">
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        Cambiar clave
                    </a>                       
                </li>               
            </ul>                
            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="@Url.Action("Index", "Home")">
                        <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
                        Inicio
                    </a>
                </li>
            </ul>

        </div>
    </div>
    <div class="row-offcanvas row-offcanvas-left">
        <div id="sidebar" class="sidebar-offcanvas">
            <div class="col-md-12">
                <input id="menusearch" type="text" class="my-1 form-control" placeholder="Buscar...">
                <div class="clearfix"></div>
                @Html.Partial("_MenuPartial")
            </div>
        </div>
        <div id="main">
            <div class="col-md-12">
                <p class="visible-xs">
                    <button type="button" class="btn btn-primary btn-sm" data-toggle="offcanvas">
                        <i class="glyphicon glyphicon-chevron-left"></i>
                    </button>
                </p>
                @RenderBody()
                <br />
                <br />
                <br />
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - COSEVI SIBOAC</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/toastr")
    @RenderSection("scripts", required: false)
    <script>
        var type = '@ViewBag.type';
        var message = '@ViewBag.message';
    </script>
    <script>
        //session end
        var sessionTimeoutWarning = @Session.Timeout -1;
        var sTimeout = parseInt(sessionTimeoutWarning) * 60 * 1000;
        setTimeout('SessionEnd()', sTimeout);

        function SessionEnd() {
            window.location = "@System.Configuration.ConfigurationManager.AppSettings["VirtualDirectory"]Account/Login/";
        }
    </script>

    @Scripts.Render("~/bundles/app")
</body>
</html>

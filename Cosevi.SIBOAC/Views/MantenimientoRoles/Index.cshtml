@model IEnumerable<Cosevi.SIBOAC.Models.SIBOACRoles>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Roles</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.Label("Roles")
        </th>
        <th>
            @Html.Label("Estado")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{

    if (item.Activo == false)
    {

    <tr class="warning">
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.Activo, new { @disabled = "disabled" })
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |


            @if (item.Activo == false)
            {
                @Html.ActionLink("Activar", "Delete", new { id = item.Id })
            }
            else
            {
                @Html.ActionLink("Inactivar", "Delete", new { id = item.Id })
            }

        </td>
    </tr>
    }
    else
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.CheckBoxFor(modelItem => item.Activo, new { @disabled = "disabled" })
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id }) |


                @if (item.Activo == false)
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { id = item.Id })
                }

            </td>
        </tr>

    }
}

</table>

@using Cosevi.SIBOAC.Models
@model LoginViewModel
@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <div class="col-sm-12 col-md-4 col-md-offset-4">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><img src="~/Content/login.png" style="float:left initial" /> Por Favor Autenticarse </h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
        {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset>
                <div class="form-group">
                    @*<input class="form-control" placeholder="Nombre de usuario" name="username" type="text">*@
                    @Html.Label("Usuario")
                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = ViewData.ModelMetadata.Watermark })
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @*<input class="form-control" placeholder="Contraseña" name="password" type="password" value="">*@
                    @Html.Label("Contraseña")
                    @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control", placeholder = ViewData.ModelMetadata.Watermark })
                    @Html.ValidationMessageFor(m => m.Contrasena, "", new { @class = "text-danger" })
                </div>

                <input class="btn btn-lg btn-success btn-block" type="submit" value="Ingresar">
            </fieldset>
}
            </div>
            <p class="text-center">
                @Html.ActionLink("¿Olvidó su contraseña?", "ForgotPassword")
            </p>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

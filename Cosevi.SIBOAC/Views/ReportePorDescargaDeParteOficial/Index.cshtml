        <div class="col-md-10">
            <div class="radio" id="radioButton">
                <label><input id="radio01" type="radio" name="opcionConsulta" value="1">Fecha de Descarga</label>
                <br>
                <label><input id="radio02" type="radio" name="opcionConsulta" value="2">Fecha de Entrega Plano</label>
                <br>
                <label><input id="radio03" type="radio" name="opcionConsulta" value="3">Fecha de Accidente</label>
            </div>
        </div>
    </div>
</div>

<div>
    <div class="form-group">
        <label class="control-label col-md-2">Rango de fechas</label>
        <div class="col-md-10">
            <div class="input-daterange input-group" id="datepicker">
                <input id="desde" type="text" class="input-sm form-control" name="start" />
                <span class="input-group-addon">a</span>
                <input id="hasta" type="text" class="input-sm form-control" name="end" />
            </div>
        </div>
    </div>
</div>


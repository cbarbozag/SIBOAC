<table border="1" align="center">
    <thead>
        <tr>
            <td>Autoridad Detalle</td>
            <td>Fecha Accidente</td>
            <td>Fecha Descarga</td>
        </tr>
    </thead>


    @foreach (var item in ViewBag.Valor)
    {
        <tr>
            <td>
                @item.DescripcionAutoridad
            </td>
            <td>
                @item.FechaBoleta
            </td>
            <td>
                @item.FechaRegistro
            </td>
        </tr>

@model IEnumerable<Cosevi.SIBOAC.Models.Inspector>

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de inspectores</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.CodigoDeDelegacion)
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDeInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaDeFin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Estado == "I")
    {
        <tr class="warning">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeDelegacion)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id.Trim() }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim() })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { id = item.Id })
                }
               
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeDelegacion)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id.Trim() }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim() })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
    }
}

</table>

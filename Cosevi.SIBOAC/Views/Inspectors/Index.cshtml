@model PagedList.IPagedList<Cosevi.SIBOAC.Models.Inspector>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Inspectores</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().Id)
        </th>       
        <th>
            @Html.DisplayNameFor(model => model.First().Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Nombre)
        </th>      
        <th>
            @Html.DisplayNameFor(model => model.First().CodigoDeDelegacion)
        </th>  
        <th>
            @Html.DisplayNameFor(model => model.First().Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeFin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    if (item.Estado == "I")
    {
        <tr class="warning">
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeDelegacion)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Eliminar", "RealDelete", new { id = item.Id.Trim() }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim() })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { id = item.Id.Trim() })
                }
               
            </td>
        </tr>
    }
    else
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Identificacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.CodigoDeDelegacion)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id.Trim() }) |
                @Html.ActionLink("Eliminar", "RealDelete", new { id = item.Id.Trim() }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { id = item.Id.Trim() })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { id = item.Id.Trim() })
                }
            </td>
        </tr>
    }
}

</table>
<br />
Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de
@Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))






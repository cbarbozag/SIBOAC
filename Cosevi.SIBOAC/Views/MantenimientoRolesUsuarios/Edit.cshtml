@model Cosevi.SIBOAC.Models.SIBOACRolesDeUsuarios

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Mantenimiento de Roles de Usuarios</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)


        <div class="form-group">
            @Html.LabelFor(model => model.Id, "Identificación", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.HiddenFor(model => model.Id)
                @Html.EditorFor(model => model.Id, "Identificación", new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })

            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SIBOACUsuarios.Nombre, "Nombre usuario", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.HiddenFor(model => model.IdUsuario)
                @Html.EditorFor(model => model.SIBOACUsuarios.Nombre, "Nombre", new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
             
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdRol, "Rol", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("IdRol", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdRol, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
@model Cosevi.SIBOAC.Models.SIBOACMenuOpciones

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>

<h3>¿Está seguro que desea eliminar este registro?</h3>
<div>
    <h4>Opciones de Menú</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.MenuOpcionesID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MenuOpcionesID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.URL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.URL)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ParentID)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ParentID)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Orden)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Orden)
        </dd>
        <dt>
            @Html.Label("Roles")
        </dt>

        <dd>
            <table align="center" width="98%">
                <tr width="100%">
                    <td width="1%"></td>
                    <td>


                        @foreach (var i in ViewBag.ListaMostrar)
                        {

                            if (i.Selected == true)
                            {
                                <input type="checkbox" name="SIBOACRoles" value="@i.Value" checked="checked" disabled="disabled" />
                                        <label for="@i.Text">@i.Text</label>
                                        <br />
                            }
                            else
                            {
                                <input type="checkbox" name="SIBOACRoles" value="@i.Value" disabled="disabled" />
                                        <label for="@i.Text">@i.Text</label>
                                        <br />
                            }

                        }


                    </td>
                </tr>

            </table>
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>

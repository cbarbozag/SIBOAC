@model PagedList.IPagedList<Cosevi.SIBOAC.Models.TipoDeIdentificacionPorTipoVehiculo>
@using PagedList.Mvc;

<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de los Tipos de Identificación por Tipo de Vehículo</h2>

<p>
    @Html.ActionLink("Nuevo", "Create", null, new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().CodigoTipoIDEVehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DescripcionCodigoTipoIDEVehiculo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().CodigoTipoVeh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().DescripcionCodigoTipoVeh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().Estado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeInicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().FechaDeFin)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    if (item.Estado == "I")
    {
        <tr class="warning">
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTipoIDEVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCodigoTipoIDEVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTipoVeh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCodigoTipoVeh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Detalles", "Details", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh  /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Eliminar", "RealDelete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh  /* id=item.PrimaryKey */ }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh })
                }
            </td>
        </tr>
    }
    else
    {      
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTipoIDEVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCodigoTipoIDEVehiculo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoTipoVeh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescripcionCodigoTipoVeh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaDeFin)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Detalles", "Details", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh  /* id=item.PrimaryKey */ }) |
               @Html.ActionLink("Eliminar", "RealDelete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh  /* id=item.PrimaryKey */ }) |
                @if (item.Estado == "I")
                {
                    @Html.ActionLink("Activar", "Delete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh })
                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { Codigo = item.CodigoTipoIDEVehiculo, CodVeh = item.CodigoTipoVeh })
                }

            </td>
        </tr>

    }
}

</table>
<br />

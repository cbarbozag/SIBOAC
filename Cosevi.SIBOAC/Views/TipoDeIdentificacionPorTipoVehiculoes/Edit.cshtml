@model Cosevi.SIBOAC.Models.TipoDeIdentificacionPorTipoVehiculo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tipo de Identificación por Tipo de Vehículo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodigoTipoIDEVehiculo)

        @Html.HiddenFor(model => model.CodigoTipoVeh)

        <div class="form-group">
            @Html.LabelFor(model => model.CodigoTipoIDEVehiculo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CodigoTipoIDEVehiculo, (IEnumerable<SelectListItem>)ViewBag.ComboTipoIdVehiculo, new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CodigoTipoIDEVehiculo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
                @Html.LabelFor(model => model.CodigoTipoVeh, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.CodigoTipoVeh, (IEnumerable<SelectListItem>)ViewBag.ComboCodVeh, new { @class = "form-control", disabled = "disabled" })
                    @Html.ValidationMessageFor(model => model.CodigoTipoVeh, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
                @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })*@
                  @Html.DropDownListFor(model => model.Estado,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "A" , Text = "Activo" },
                       new SelectListItem { Value = "I" , Text = "Inactivo" }
                    },
                  new { @class = "form-control" })
                </div>
            </div>

         <div class="form-group">
                @Html.LabelFor(model => model.FechaDeInicio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FechaDeInicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaDeInicio, "", new { @class = "text-danger" })
                </div>
            </div>

        <div class="form-group">
                @Html.LabelFor(model => model.FechaDeFin, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FechaDeFin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaDeFin, "", new { @class = "text-danger" })
                </div>
            </div>

         <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
 }

        <div>
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

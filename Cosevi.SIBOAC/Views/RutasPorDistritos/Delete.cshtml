@model Cosevi.SIBOAC.Models.RutasPorDistritos

@{
    ViewBag.Title = "Inactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Model.Estado == "A")
{
    <h2>Inactivar</h2>
}
else
{
    <h2>Activar</h2>
}

<h3>¿Está seguro que desea cambiar el estado?</h3>
<div>
    <h4>Rutas por Distrito</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.CodigoDistrito)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CodigoDistrito)
        </dd>

        <dt>
            @Html.Label("Nombre Distrito")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionDistrito)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CodigoRuta)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CodigoRuta)
        </dd>


        <dt>
            @Html.Label("Descripción Ruta")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionRuta)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Km)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Km)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeInicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeFin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeFin)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Estado == "A")
            {
                <input type="submit" value="Inactivar" class="btn btn-warning" />
            }
            else
            {
                <input type="submit" value="Activar" class="btn btn-success" />
            }
            |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>

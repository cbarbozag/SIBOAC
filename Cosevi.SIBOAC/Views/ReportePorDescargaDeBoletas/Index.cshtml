<div class="pull-right">
    <button id="generar" type="button" class="btn btn-success">Generar Reporte</button>
</div>


<br />
<br />
<br />
<h4>Reporte</h4>
<hr />


<div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-2">
                Serie
            </div>
            <div class="col-md-1">
                Número de boleta
            </div>
            <div class="col-md-1">
                Fecha de descarga
            </div>
            <div class="col-md-1">
                Fecha accidente
            </div>
            <div class="col-md-1">
                Autoridad judicial
            </div>
            <div class="col-md-1">
                Código de delegación
            </div>
            <div class="col-md-1">
                Clase-Codigo-Numero de placa
            </div>
            <div class="col-md-1">
                Identificación
            </div>
            <div class="col-md-1">
                Nombre
            </div>
            <div class="col-md-1">
                Código de rol
            </div>
            <div class="col-md-1">
                Serie-Numero parte oficial
            </div>
        </div>
    </div>
    <div id="reporte" class="panel-body">
        <!-- -->
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/ReportePorDescargaDeBoletas")
}
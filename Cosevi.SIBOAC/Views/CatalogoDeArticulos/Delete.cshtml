@model Cosevi.SIBOAC.Models.CatalogoDeArticulos

@{
    ViewBag.Title = "Inactivar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Estado == "A")
{
    <h2>Inactivar</h2>
}
else
{
    <h2>Activar</h2>
}

<h3>Esta seguro que desea cambiar el estado?</h3>
<div>
    <h4>Catálogo de Artículos</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Conducta)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Conducta)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeInicio)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeInicio)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.FechaDeFin)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FechaDeFin)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Multa)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Multa)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Puntos)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Puntos)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Totalidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Totalidad)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (Model.Estado == "A")
            {
                <input type="submit" value="Inactivar" class="btn btn-warning" />
            }
            else
            {
                <input type="submit" value="Activar" class="btn btn-success" />
            }
            |
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>

                }
                else
                {
                    @Html.ActionLink("Inactivar", "Delete", new { codigo = item.Id, conducta = item.Conducta, fechaInicio = item.FechaDeInicio, fechaFinal = item.FechaDeFin })
                }
            </td>
        </tr>



@model Cosevi.SIBOAC.Models.RolDePersonaPorTipoDeIdentificacionDeVehiculo

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Eliminar</h2>


<h3>¿Está seguro que desea eliminar este registro?</h3>
<div>
    <h4>Rol de Persona por Tipo de Identificación de Vehículo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CodigoDeRol)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionRol)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.CodigoDeIdentificacionVehiculo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescripcionTipoVehiculo)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Estado)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Estado)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaDeInicio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaDeInicio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaDeFin)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaDeFin)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            @Html.ActionLink("Regresar a la lista", "Index")
        </div>
    }
</div>

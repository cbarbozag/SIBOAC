@model Cosevi.SIBOAC.Models.RolDePersonaPorTipoDeIdentificacionDeVehiculo

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Rol de Persona por Tipo de Identificación de Vehículo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CodigoDeRol)
        @Html.HiddenFor(model => model.CodigoDeIdentificacionVehiculo)
              
        <div class="form-group">
            @Html.LabelFor(model => model.CodigoDeRol, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CodigoDeRol, (IEnumerable<SelectListItem>)ViewBag.ComboRolPersona, new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CodigoDeRol)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.CodigoDeIdentificacionVehiculo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("codIdVeh", String.Empty)
                @Html.EditorFor(model => model.CodigoDeIdentificacionVehiculo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CodigoDeIdentificacionVehiculo)
            </div>
        </div>*@

        <div class="form-group">
            @Html.LabelFor(model => model.CodigoDeIdentificacionVehiculo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.DropDownList("codIdVeh", String.Empty)*@
                @Html.DropDownListFor(model => model.CodigoDeIdentificacionVehiculo, (IEnumerable<SelectListItem>)ViewBag.ComboTipoVeh, new { @class = "form-control", disabled = "disabled" })
                @Html.ValidationMessageFor(model => model.CodigoDeIdentificacionVehiculo)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Estado, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Estado, "", new { @class = "text-danger" })*@
                @Html.DropDownListFor(model => model.Estado,
                  new List<SelectListItem> {
                       new SelectListItem { Value = "A" , Text = "Activo" },
                       new SelectListItem { Value = "I" , Text = "Inactivo" }
                    },
                  new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaDeInicio, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <div class="input-daterange input-group" id="datepicker"><span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    @Html.EditorFor(model => model.FechaDeInicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaDeInicio, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaDeFin, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                <div class="input-daterange input-group" id="datepicker"><span class="input-group-addon"><span class="glyphicon glyphicon-th"></span></span>
                    @Html.EditorFor(model => model.FechaDeFin, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FechaDeFin, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar a la lista", "Index")
</div>
@section Scripts {
<script>
        $(document).ready(
        function () {
            Calendario();

        });
</script>
<script>
        function Calendario() {
            $('.input-daterange').datepicker({
                startView: 2,
                autoclose: true,
                orientation: 'bottom auto',
                todayHighlight: true,
                todayBtn: true,
                format: 'dd/mm/yyyy'
            });
        };
</script>
}


@{
    ViewBag.Title = "_ReportePorUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte por Usuario - Estatus Plano o Croquis</h2>
<h4>Filtro</h4>
<hr />
@using (Html.BeginForm("GetReportePorUsuario", "Reporte", FormMethod.Get))
{
    <div class="form-group">
        <label class="control-label col-md-2">Rango de fechas</label>
        <div class="col-md-10">
            <div class="input-daterange input-group" id="datepicker">
                <input id="desde" type="text" class="input-sm form-control" name="desde" />
                <span class="input-group-addon">a</span>
                <input id="hasta" type="text" class="input-sm form-control" name="hasta" />
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
    <div class="form-group">
        <label class="control-label col-md-2">Usuarios</label>
        <div class="col-max col-md-10">
            <ul id="list" name="list" class="list-group" data-toggle="items">
                <!-- -->
            </ul>
        </div>
    </div>

    <div class="pull-right">
        <button id="todos" type="button" class="btn btn-primary">Marcar todos</button>
        <button id="limpiar" type="button" class="btn btn-warning">Limpiar</button>
    </div>
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <div class="pull-right">
        <button id="generar" type="button" class="btn btn-success">Generar Reporte</button>
    </div>
}

<iframe id="ifrmReportViewer" style="height:1200px; width:99%;" frameborder="0" scrolling="no"></iframe>
@section scripts{

    @Scripts.Render("~/bundles/reportePorUsuario")

    <script>
        $(document).ready(
        function () {
            ReportCall();
        });
    </script>

    <script>
        function ReportCall() {

            var url = '/Reports/ViewerPage.aspx?reporteID=@ViewBag.ReporteID&nombreReporte=@ViewBag.NombreReporte&parametros=@ViewBag.Parametros';

            var myFrame = document.getElementById('ifrmReportViewer');
            if (myFrame !== null) {
                if (myFrame.src) {
                    myFrame.src = url;
                }
                else if (myFrame.contentWindow !== null && myFrame.contentWindow.location !== null) {
                    myFrame.contentWindow.location = url;
                }
                else {
                    myFrame.setAttribute('src', url);
                }
            }

            return false;
        }
    </script>
}
@model IEnumerable<Cosevi.SIBOAC.Models.GetReporteStatusActualPlanoData_Result>
@{
    ViewBag.Title = "_ReporteStatusActualPlano";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Reporte por Estado Actual del Plano o Croquis</h2>
<h4>Filtro</h4>
<hr />

@using (Html.BeginForm("GetReporteStatusActualPlano", "Reporte", FormMethod.Get))
{
    <table border="0">
        <div class="form-group">
            <label class="control-label col-md-2">Seleccione la opción status plano</label>
            <div class="col-md-10">

                <div class="radio" id="radioButton">
                    <label><input id="radio1" type="radio" name="radio" value="1" checked>Con Plano</label>
                    <br>
                    <label><input id="radio2" type="radio" name="radio" value="2">Sin Plano</label>
                    <br>
                    <label><input id="radio3" type="radio" name="radio" value="3">Entrega Posterior</label>
                    <br>
                    <label><input id="radio4" type="radio" name="radio" value="4">Entrega Posterior Sí</label>
                    <br>
                    <label><input id="radio5" type="radio" name="radio" value="5">Entrega Posterior No</label>
                </div>

            </div>
        </div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="form-group">
            <label class="control-label col-md-2">Rango de fechas</label>
            <div class="col-md-10">
                <div class="input-daterange input-group" id="datepicker">
                    <input id="desde" type="text" class="input-sm form-control" name="desde" value="@Request.Params["desde"]" required/>
                    <span class="input-group-addon">a</span>
                    <input id="hasta" type="text" class="input-sm form-control" name="hasta" value="@Request.Params["hasta"]" required/>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-2">Delegación</label>
                        <br />
                        <p>
                            <input type="text" id="BuscarDelegacion" name="BuscarDelegaciones" onkeyup="BuscarDelega()" placeholder="Buscar..">
                        </p>
                        <div class="col-max col-md-10">
                            <div id="ListaDelegaciones">
                                <select name="listaDelegacion" id="example-getting-started" multiple="multiple" class="list-group" data-toggle="items" required>
                                    @foreach (var item in ViewBag.Delegacion)
                                    {
                                        if (item.Seleccionado == true)
                                        {
                                            <option value="@item.Id" selected>@item.Descripcion</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Descripcion</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <br>
                        <br /> <br /> <br /> <br /> <br /> <br />
                        <br /> <br /> <br /> <br /> <br /> <br />
                        <div class="btn-group pull-right">
                            <button id="todosDelegacion" type="button" class="btn btn-danger" onclick="marcarTodosDelegacion()">Marcar todos</button>
                            <button id="limpiarDelegacion" type="button" class="btn btn-primary" onclick="limpiarTodosDelegacion()">Limpiar</button>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label col-md-2">Autoridad Judicial</label>
                        <br />
                        <p>
                            <input type="text" id="BuscarAutoridad" name="BuscarAutoridades" onkeyup="BuscarAut()" placeholder="Buscar..">
                        </p>
                        <div class="col-max col-md-10">
                            <div id="ListaAutoridades">
                                <select name="listaAutoridad" id="example-getting-started" multiple="multiple" class="list-group" data-toggle="items" required>
                                    @foreach (var item in ViewBag.Autoridad)
                                    {
                                        if (item.Seleccionado == true)
                                        {
                                            <option value="@item.Id" selected>@item.Descripcion</option>
                                        }
                                        else
                                        {
                                            <option value="@item.Id">@item.Descripcion</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <br>
                        <br /> <br /> <br /> <br /> <br /> <br />
                        <br /> <br /> <br /> <br /> <br /> <br />
                        <div class="btn-group pull-right">
                            <button id="todosAutoridad" type="button" class="btn btn-danger" onclick="marcarTodosAutoridad()">Marcar todos</button>
                            <button id="limpiarAutoridad" type="button" class="btn  btn-primary" onclick="limpiarTodosAutoridad()">Limpiar</button>

                        </div>
                    </div>
                </div>
            </div>
            <br />
            <br />
            <div class="pull-right">
                <input type="submit" id="reporte" value="Generar Reporte" class="btn btn-success" />
            </div>
        </div>
    </table>
}
<iframe id="ifrmReportViewer" style="height:1200px; width:99%;" frameborder="0" scrolling="no"></iframe>
@section scripts
{
    <script>
                $(document).ready(
                function () {
                    Calendario();                    
                    ReportCall();

                });
    </script>

    <script>

        $("#listaDelegacion").change(function () {
            var id = $(this).attr('name');
            var str2 = "";
            $("#listaDelegacion option:selected").each(function () {

                str2 += "&" + id + "=" + $(this).attr('value');
            });
            $("div").text(str2);
        }).trigger('change');

        $("#listaAutoridad").change(function () {
            var id = $(this).attr('name');
            var str2 = "";
            $("#listaAutoridad option:selected").each(function () {

                str2 += "&" + id + "=" + $(this).attr('value');
            });
            $("div").text(str2);
        }).trigger('change');

        function marcarTodosDelegacion() {

            var items = document.getElementById("ListaDelegaciones").getElementsByClassName('list-group-item');
            for (var i = 0; i < items.length; i++) {
                if (!$(items[i]).hasClass('active')) {
                    $(items[i]).addClass('active')
                }
            }
        };

        function limpiarTodosDelegacion() {
            var items = document.getElementById("ListaDelegaciones").getElementsByClassName('list-group-item');
            for (var i = 0; i < items.length; i++) {
                //  $(items[i]).prop('selected', false)
                $(items[i]).removeClass('active');

            }
        };

        function marcarTodosAutoridad() {

            var items = document.getElementById("ListaAutoridades").getElementsByClassName('list-group-item');
            for (var i = 0; i < items.length; i++) {
                if (!$(items[i]).hasClass('active')) {
                    $(items[i]).addClass('active')
                }
            }
        };

        function limpiarTodosAutoridad() {
            var items = document.getElementById("ListaAutoridades").getElementsByClassName('list-group-item');
            for (var i = 0; i < items.length; i++) {
                $(items[i]).removeClass('active');

            }
        };
        function ReportCall() {
            var url = '/Reports/ViewerPage.aspx?reporteID=@ViewBag.ReporteID&nombreReporte=@ViewBag.NombreReporte&parametros=@ViewBag.Parametros';

            var myFrame = document.getElementById('ifrmReportViewer');
            if (myFrame !== null) {
                if (myFrame.src) {
                    myFrame.src = url;
                }
                else if (myFrame.contentWindow !== null && myFrame.contentWindow.location !== null) {
                    myFrame.contentWindow.location = url;
                }
                else {
                    myFrame.setAttribute('src', url);
                }
            }

            return false;
        }

        function Calendario() {
            $('.input-daterange').datepicker({
                startView: 2
            });
        };
    </script>

<script type="text/javascript">

    function BuscarAut() {
        var input = document.getElementById('BuscarAutoridad').value.toLowerCase();
        var output = document.getElementById("ListaAutoridades").getElementsByClassName('list-group-item');

        for (var i = 0; i < output.length; i++) {
            if (output[i].text.toLowerCase().indexOf(input) < 0) {
                output[i].style.display = "none";
                output[i].setAttribute('style', 'display:none;');

            } else {
                output[i].style.display = "";
                output[i].setAttribute('style', 'display:');
            }
        }
    }

    function BuscarDelega() {
        var input = document.getElementById('BuscarDelegacion').value.toLowerCase();
        var output = document.getElementById("ListaDelegaciones").getElementsByClassName('list-group-item');

        for (var i = 0; i < output.length; i++) {
            if (output[i].text.toLowerCase().indexOf(input) < 0) {
                output[i].style.display = "none";
                output[i].setAttribute('style', 'display:none;');

            } else {
                output[i].style.display = "";
                output[i].setAttribute('style', 'display:');
            }
        }
    }

</script>
}

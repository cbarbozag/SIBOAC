    @Html.Hidden("delegacionesValues");
    @Html.Hidden("autoridadesValues");
   
    <div class="form-group">
        <label class="control-label col-md-2">Seleccione una opción para las fechas</label>
        <div class="col-md-10">

            <div class="radio" id="radioButton">
                @{

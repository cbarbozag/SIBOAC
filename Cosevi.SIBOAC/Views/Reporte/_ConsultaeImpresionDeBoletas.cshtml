            <input type="submit" id="reporte" value="Generar Reporte" class="btn btn-success" />
        </div>

}


<iframe id="ifrmReportViewer" style="height:1200px; width:99%;" frameborder="0" scrolling="no"></iframe>
@section scripts
    {
    <script>
                $(document).ready(
                function () {
                    Calendario();
                    cargarDatosInspector();
                    cargarDatosDelegacion();
                    ReportCall();

                });
    </script>


    <script>
                    function ReportCall() {
                    var url = '/Reports/ViewerPage.aspx?reporteID=@ViewBag.ReporteID&nombreReporte=@ViewBag.NombreReporte&parametros=@ViewBag.Parametros';

                    var myFrame = document.getElementById('ifrmReportViewer');
                    if (myFrame !== null) {
                        if (myFrame.src) {
                            myFrame.src = url;
                        }
                        else if (myFrame.contentWindow !== null && myFrame.contentWindow.location !== null) {
                            myFrame.contentWindow.location = url;
                        }
                        else {
                            myFrame.setAttribute('src', url);
                        }
                    }

                    return false;
                }

               function cargarDatosDelegacion() {
                    $.ajax({
                        type: 'GET',
                        url: 'api/Delegacions',
                        //data: {},
                        success: function (results) {
                            var listD = $('#idDelegaciones');
                            for (var i = 0; i < results.length; i++) {
                                listD.append('<li name="idDelegaciones" data-id='+ results[i].Id + ' class="list-group-item">' + results[i].Descripcion  + '</li>');
                            };
                        },
                        error: function (jqXHR, textStatus, errorThrown) {
                            console.log(jqXHR);
                        }
                    });
               };

               function cargarDatosInspector() {
                   $.ajax({
                       type: 'GET',
                       url: 'api/Inspectors',
                       //data: {},
                       success: function (results) {
                           var listI = $('#idInspectores');
                           for (var i = 0; i < results.length; i++) {
                               if (results[i].Id != null && results[i].Id.trim().length > 0)
                                   listI.append('<li  name="idInspectores" data-id=' + results[i].Id + ' class="list-group-item">' + results[i].Id + '</li>');
                           };
                       },
                       error: function (jqXHR, textStatus, errorThrown) {
                           console.log(jqXHR);
                       }
                   });
               };


             function Calendario() {
                $('.input-daterange').datepicker({
                    startView: 2
                });
             };
    </script>
}
